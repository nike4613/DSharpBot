<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <StartupObject>DSharpBotCore.Program</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="config.json" />
    <None Remove="libs\ffmpeg.exe" />
    <None Remove="libs\libopus.dll" />
    <None Remove="libs\libsodium.dll" />
    <None Remove="libs\runbot.bat" />
    <None Remove="libs\youtube-dl.exe" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="libs\runbot.bat">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="libs\ffmpeg.exe">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="libs\libopus.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="libs\libsodium.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="libs\youtube-dl.exe">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DSharpPlus" Version="4.0.0-beta-00460" />
    <PackageReference Include="DSharpPlus.CommandsNext" Version="4.0.0-beta-00460" />
    <PackageReference Include="DSharpPlus.Interactivity" Version="4.0.0-beta-00460" />
    <PackageReference Include="DSharpPlus.VoiceNext" Version="4.0.0-beta-00460" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="NYoutubeDL" Version="0.9.0" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="move $(OutDir)\libs\* $(OutDir)&#xD;&#xA;rmdir $(OutDir)\libs" />
  </Target>

</Project>
